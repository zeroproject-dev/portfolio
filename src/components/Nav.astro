---
import LanguagePicker from "./LanguagePicker.astro";
import LogoIcon from "@components/icons/Logo.astro";

import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const t = getI18N({ currentLocale });
---

<nav
  class="fixed top-0 left-0 right-0 h-16 flex justify-between items-center px-16 z-10"
>
  <div class="flex items-center">
    <LogoIcon class="w-12" />
  </div>

  <ul class="flex p-0 m-0 h-full list-none content-center">
    <li
      class="w-28 h-full hover:bg-hover hover:border-b-2 hover:border-b-solid hover:font-bold hover:border-accentColor"
      id="nav-start"
    >
      <a
        class="grid w-28 h-full place-content-center no-underline text-white"
        href="#start">{t.navbar.home}</a
      >
    </li>
    <li
      class="w-28 h-full hover:bg-hover hover:border-b-2 hover:border-b-solid hover:font-bold hover:border-accentColor"
      id="nav-projects"
    >
      <a
        class="grid w-28 h-full place-content-center no-underline text-white"
        href="#projects">{t.navbar.projects}</a
      >
    </li>
    <li
      class="w-28 h-full hover:bg-hover hover:border-b-2 hover:border-b-solid hover:font-bold hover:border-accentColor"
      id="nav-contact"
    >
      <a
        class="grid w-28 h-full place-content-center no-underline text-white"
        href="#contact">{t.navbar.contact}</a
      >
    </li>
    <li style="width: 100px;">
      <LanguagePicker />
    </li>
  </ul>
</nav>

<style>
  @media (max-width: 768px) {
    nav {
      justify-content: center;
    }

    .logo {
      display: none;
    }
  }
</style>
