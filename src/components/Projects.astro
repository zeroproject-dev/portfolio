---
import Card from "./Card.astro";

const projects = [
  {
    title: "Stream subtitles",
    description:
      "Genera subtitulos en tiempo real en un mini servidor web local con inteligencia artificial en python.",
    link: "https://github.com/zeroproject-0/stream-subtitles",
    image: "https://picsum.photos/200/300",
  },
  {
    title: "Board",
    description: "Pizarra virtual hecha en typescript.",
    link: "https://board.zeroproject.dev",
    image: "https://picsum.photos/200/300",
  },
  {
    title: "Dotz",
    description:
      "Dotz ayuda al manejo de archivos de configuración en linux hecho en rust.",
    link: "https://github.com/zeroproject-0/dotz",
    image: "https://picsum.photos/200/300",
  },
  {
    title: "Pomodoro",
    description: "Pomodoro hecho en c++ con interfaz gráfica de Qt6.",
    link: "https://github.com/zeroproject-0/pomodoro",
    image: "https://picsum.photos/200/300",
  },
  {
    title: "NucitaBot",
    description:
      "Bot de discord que permite mediante tts generar audio y reproducirlo en un canal.",
    link: "https://github.com/zeroproject-0/nucitabot",
    image: "https://picsum.photos/200/300",
  },
  {
    title: "TpHub",
    description:
      "TpHub es un plugin para servidores de minecraft spigot que permite almacenar coordenadas y poder teletransportarse a ellas facilmente.",
    link: "https://github.com/zeroproject-0/tpHub",
    image: "https://picsum.photos/200/300",
  },
];

import { getI18N } from "../i18n/index";
const { currentLocale } = Astro;
const t = getI18N({ currentLocale });
---

<section id="projects">
  <h2 class="projects__title">{t.projects.title}</h2>
  <article class="projects">
    <div class="slide">
      {
        projects.map((project) => (
          <div class="item" style={`background-image: url(${project.image});`}>
            <div class="content">
              <div class="name">{project.title}</div>
              <div class="desc">{project.description}</div>
              <a href={project.link}>Link</a>
            </div>
          </div>
        ))
      }
    </div>
    <div class="button">
      <button class="prev">
        {"<"}
      </button>
      <button class="next">
        {">"}
      </button>
    </div>
  </article>
</section>

<script>
  const $next = document.querySelector(".next");
  const $prev = document.querySelector(".prev");

  $next.addEventListener("click", () => {
    const $container = document.querySelector(".slide");
    const $items = document.querySelectorAll(".item");
    $container.appendChild($items[0]);
  });

  $prev.addEventListener("click", () => {
    const $container = document.querySelector(".slide");
    const $items = document.querySelectorAll(".item");
    $container.prepend($items[$items.length - 1]);
  });
</script>

<style>
  #projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    min-height: 100vh;
  }

  .projects__title {
    margin-top: 7rem;
    margin-bottom: 3rem;
    font-size: 48px;
  }

  .projects {
    position: relative;
    width: 800px;
    height: 480px;
    background-color: #f5f5f5;
    box-shadow: 0 30px 50px #dbdbdb;
  }

  .slide {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .projects .slide .item {
    width: 165px;
    height: 250px;
    position: absolute;
    transform: translate(0, 0);
    border-radius: 20px;
    background-position: 50% 50%;
    background-size: cover;
    display: inline-block;
    transition: 0.5s;
  }

  .slide .item:nth-child(1),
  .slide .item:nth-child(2) {
    top: 0;
    left: 0;
    transform: translate(0, 0) !important;
    border-radius: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }

  .slide .item:nth-child(3) {
    left: 50%;
  }

  .slide .item:nth-child(4) {
    left: calc(50% + 210px);
  }

  .slide .item:nth-child(5) {
    left: calc(50% + 430px);
  }

  .slide .item:nth-child(n + 6) {
    left: calc(50% + 650px);
    opacity: 0;
  }

  .item .content {
    position: absolute;
    top: 50%;
    left: 100px;
    width: 300px;
    text-align: left;
    color: #333;
    transform: translate(0, -50%);
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    display: none;
  }

  .slide .item:nth-child(2) .content {
    display: block;
  }

  .content .name {
    font-size: 40px;
    text-transform: uppercase;
    font-weight: 700;
    opacity: 0;
    animation: animate 1s ease-in-out 1 forwards;
  }

  .content .desc {
    margin-top: 10px;
    margin-bottom: 20px;
    opacity: 0;
    animation: animate 1s ease-in-out 0.3s 1 forwards;
  }

  @keyframes animate {
    from {
      opacity: 0;
      transform: translte(0, 100px);
      filter: blur(33px);
    }

    to {
      opacity: 1;
      transform: translate(0, 0);
      filter: blur(0);
    }
  }

  .button {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 20px;
  }

  .button button {
    width: 40px;
    height: 35px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    margin: 0 5px;
    border: 1px solid #000;
    transition: 0.3s;
  }

  .button button:hover {
    background: #ababab;
    color: #fff;
  }
</style>
