---
import LinkList from "./LinkList.astro";

import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const t = getI18N({ currentLocale });
---

<section id="contact">
  <h2 class="contact__title">{t.contact.title}</h2>

  <LinkList size={"large"} />

  <footer class="footer">
    <p>
      Made with <span class="heart">‚ù§</span>
    </p>
  </footer>
</section>

<style>
  #contact {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100vh;
  }

  .contact__title {
    margin-top: 7rem;
    margin-bottom: 3rem;
    font-size: 48px;
  }

  footer {
    font-size: 1rem;
    margin-bottom: 3rem;
    line-height: 2rem;
  }

  .heart {
    color: red;
  }
</style>
