---
export interface Props {
	title: string;
	description: string;
	link: string;
	image: string;
}
const { link, title, description, image } = Astro.props;
---

<div class="card">
	<div class="card__border">
		<a href={link} class="card__link">
			<h2 class="card__title">
				{title}
				<span>&rarr;</span>
			</h2>
			<img class="card__image" src={image} alt={title} />
			<p class="card__description">
				{description}
			</p>
		</a>
	</div>
</div>

<style>
	.card {
		width: 300px;
		height: 300px;
		background-image: linear-gradient(163deg, #00ff75 0%, #3700ff 100%);
		border-radius: 20px;
		transition: all 0.3s;
	}

	.card__border {
		width: 300px;
		height: 300px;
		background-color: var(--black);
		border-radius: ;
		border-radius: 18px;
		padding: 1rem;
		box-sizing: border-box;
		transition: transform 0.2s;
	}

	.card:hover .card__border {
		transform: scale(0.98);
		border-radius: 20px;
		padding: 0;
		padding-top: 1rem;
	}

	.card:hover {
		box-shadow: 0px 0px 30px 1px rgba(0, 255, 117, 0.3);
	}

	.card__title {
		font-size: 1.5rem;
		font-weight: bold;
		text-align: center;
		margin-top: 0;
		margin-bottom: 1rem;
	}

	.card__image {
		width: 100px;
		height: 100px;
		border-radius: 50%;
	}

	.card__link {
		text-decoration: none;
		color: var(--white);
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.card:hover .card__description {
		display: none;
	}

	.card:hover .card__image {
		width: 150px;
		height: 150px;
		border-radius: 0;
	}
</style>
