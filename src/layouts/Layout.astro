---
import { getI18N } from "@i18n/index";

export interface Props {
  title?: string;
}

const { currentLocale } = Astro;

let { title } = Astro.props as Props;

if (!title) {
  const t = getI18N({ currentLocale });
  title = t.title;
}
---

<!doctype html>
<html lang={currentLocale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio de proyectos Zeroproject" />
    <meta name="author" content="Zeroproject" />

    <link rel="alternate" href="https://zeroproject.dev/es" hreflang="es" />
    <link rel="alternate" href="https://zeroproject.dev/" hreflang="en" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body class="bg-bgColor m-0 p-0 w-dvw min-h-dvh overflow-x-hidden text-white">
    <slot />
  </body>
</html>
